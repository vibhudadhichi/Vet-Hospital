<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vibhu.vethospital">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.vibhu.vethospital.MainActivity2"
            android:label="Details Page"
            android:parentActivityName="com.example.vibhu.vethospital.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vibhu.vethospital.MainActivity" />
        </activity>
        <activity
            android:name="com.example.vibhu.vethospital.MainActivity3"
            android:label="Confirmation Page"
            android:parentActivityName="com.example.vibhu.vethospital.MainActivity2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vibhu.vethospital.MainActivity2" />
        </activity>
    </application>

</manifest>