<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/secondpage">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Full Name" />

    <EditText android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="John Doe"
        android:inputType="textCapWords"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="pet" />

    <EditText android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="German Shepherd"
        android:inputType="textCapWords"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="SEX" />

    <EditText android:id="@+id/name21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="Male | Female"
        android:inputType="textCapWords"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Age" />

    <EditText android:id="@+id/name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="2 Years 3 Months"
        android:inputType="textCapWords"/>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Booking Date" />

    <EditText android:id="@+id/name41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:hint="12/11/2016"
        android:inputType="time"
        android:onClick="showDatePickerDialog"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Booking Time" />

    <EditText android:id="@+id/name4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:hint="12:00 pm"
        android:inputType="time"
        android:onClick="showTimePickerDialog"
        />

    <Button
        android:id="@+id/button"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Book"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#050505"
        android:onClick="thanks"/>

</LinearLayout>
    </ScrollView>